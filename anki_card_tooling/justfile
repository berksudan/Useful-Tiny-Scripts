set shell := ["bash", "-cu"]

PYTHON := "3.14"
VENV := ".venv"

default:
    @just --list

setup:
    # Install UV if missing
    curl -LsSf https://astral.sh/uv/install.sh | sh

    # Create or reset the virtual environment
    uv venv --python {{ PYTHON }} --clear

    # Install packages from pyproject.toml into the venv
    uv pip install -e .

    @echo "Run: source {{ VENV }}/bin/activate  # optional if you want manual use"
